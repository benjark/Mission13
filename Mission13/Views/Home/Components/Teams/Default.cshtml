@{
}

@model IEnumerable<Team>

<div class="d-grid gap-2">

    <h2>Teams</h2>

    <a asp-controller="Home" asp-action="Index" asp-route-team="0" class="btn btn-outline-secondary">Home</a>
    <br />
    @foreach (Team t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-team="@t.TeamID"
           class="btn @(ViewBag.SelectedTeam == t.TeamID.ToString() ? "btn-primary" : "btn-outline-secondary")">@t.TeamName</a><br />
    }

</div>